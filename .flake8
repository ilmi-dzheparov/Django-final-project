[flake8]
ignore =
    W503,
    F811,
    I004,
    I001
exclude =
    */migrations/,
    venv/,
    env/,

per-file-ignores =
    */settings.py:E501
max-complexity = 10

[isort]
multi_line_output = 5
lines_after_imports = 2
include_trailing_comma = true
use_parentheses = true
skip =
    migrations
    venv
    env

sections=FUTURE,STDLIB,THIRDPARTY,FIRSTPARTY,LOCALFOLDER
no_lines_before=LOCALFOLDER
